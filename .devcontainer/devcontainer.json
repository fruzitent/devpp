{
  "$help": "https://containers.dev/implementors/json_reference",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "build": {
    "context": ".",
    "dockerfile": "./Containerfile",
    "target": "devcontainer"
  },
  "customizations": {
    "vscode": {
      "extensions": ["EditorConfig.EditorConfig", "esbenp.prettier-vscode", "FelixZeller.markdown-oxide"],
      "settings": {
        "[json][jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "features": {
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/bash-language-server/versions
    "./features/src/bash-language-server/": {
      // @see: https://npmjs.com/package/bash-language-server?activeTab=versions
      "version": "5.6.0"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/common-utils/versions
    "./features/src/common-utils/": {},
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/node/versions
    "./features/src/node/": {
      // @see: https://nodejs.org/en/download/archive/current
      "version": "v24.9.0"
    },
    // @see: https://github.com/devcontainers/features/pkgs/container/features/rust/versions
    "ghcr.io/devcontainers/features/rust:1.5.0": {
      // @see: https://github.com/rust-lang/rust/releases
      "version": "1.90.0"
    }
  },
  // TODO: https://github.com/microsoft/vscode-remote-release/issues/4646
  "runArgs": ["--security-opt=label=disable"],
  // TODO: https://github.com/devcontainers/spec/issues/25
  // TODO: https://github.com/devcontainers/spec/issues/479
  "remoteUser": "root",
  "updateRemoteUserUID": false
}
