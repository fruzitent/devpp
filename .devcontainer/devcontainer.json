{
  "$help": "https://containers.dev/implementors/json_reference",
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "build": {
    "context": ".",
    "dockerfile": "./Containerfile",
    "target": "devcontainer"
  },
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {}
    }
  },
  "features": {
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/bash-language-server/versions
    "./features/src/bash-language-server/": {
      // @see: https://npmjs.com/package/bash-language-server?activeTab=versions
      "version": "5.6.0"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/common-utils/versions
    "./features/src/common-utils/": {},
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/editorconfig/versions
    "./features/src/editorconfig/": {
      // @see: https://npmjs.com/package/editorconfig?activeTab=versions
      "version": "3.0.1"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/markdown-oxide/versions
    "./features/src/markdown-oxide/": {
      // @see: https://github.com/Feel-ix-343/markdown-oxide/releases
      "version": "v0.25.8"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/node/versions
    "./features/src/node/": {
      // @see: https://nodejs.org/en/download/archive/current
      "version": "v24.9.0"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/prettier/versions
    "./features/src/prettier/": {
      // @see: https://npmjs.com/package/prettier?activeTab=versions
      "version": "3.6.2"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/rust/versions
    "./features/src/rust/": {
      // @see: https://github.com/rust-lang/rustup/tags
      "version": "1.28.2"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/shellcheck/versions
    "./features/src/shellcheck/": {
      // @see: https://github.com/koalaman/shellcheck/releases
      "version": "v0.11.0"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/shfmt/versions
    "./features/src/shfmt/": {
      // @see: https://github.com/mvdan/sh/releases
      "version": "v3.12.0"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/taplo/versions
    "./features/src/taplo/": {
      // @see: https://github.com/tamasfe/taplo/releases
      "version": "0.10.0"
    },
    // @see: https://github.com/fruzitent/devcontainer-features/pkgs/container/devcontainer-features/zig/versions
    "./features/src/zig/": {
      // @see: https://ziglang.org/download
      "version": "0.15.1"
    }
  },
  // TODO: https://github.com/microsoft/vscode-remote-release/issues/4646
  "runArgs": ["--security-opt=label=disable"],
  // TODO: https://github.com/devcontainers/spec/issues/25
  // TODO: https://github.com/devcontainers/spec/issues/479
  "remoteUser": "root",
  "updateRemoteUserUID": false
}
